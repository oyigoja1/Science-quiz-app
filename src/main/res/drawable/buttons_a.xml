<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@android:color/white" />
            <stroke
                android:color="#e0e6e5"
                android:width="0dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
            <!--<gradient
                android:type="linear"
                android:startColor="#F54EA2"
                android:endColor="#FF7676"/>-->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#5a2f0b" />
            <stroke
                android:color="#5a2f0b"
                android:width="0dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
            <!--<gradient
                android:type="linear"
                android:startColor="#F54EA2"
                android:endColor="#FF7676"/>-->
        </shape>
    </item>


</selector>
