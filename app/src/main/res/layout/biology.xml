            android:layout_margin="20dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/groupOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttons_a"
                android:elevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="serif"
                    android:text="@string/bio_one" />

                <RadioButton
                    android:id="@+id/question_one_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_a_one" />

                <RadioButton
                    android:id="@+id/question_one_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_b_one" />

                <RadioButton
                    android:id="@+id/question_one_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_c_one" />

                <RadioButton
                    android:id="@+id/question_one_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_d_one" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/buttons_a"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/groupTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="serif"
                    android:text="@string/bio_two" />

                <CheckBox
                    android:id="@+id/question_two_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_a_two" />

                <CheckBox
                    android:id="@+id/question_two_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
