            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttons_a"
                android:orientation="vertical"
                android:elevation="10dp"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif"
                    android:text="@string/bio_nine" />

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/biology_answer_field"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:inputType="text"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/groupTen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttons_a"
                android:elevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="serif"
                    android:text="@string/bio_ten" />

                <RadioButton
                    android:id="@+id/question_ten_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_a_ten" />

                <RadioButton
                    android:id="@+id/question_ten_b1"
