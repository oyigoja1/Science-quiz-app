                    android:text="@string/bio_b_four" />

                <RadioButton
                    android:id="@+id/question_four_c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_c_four" />

                <RadioButton
                    android:id="@+id/question_four_d1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_d_four" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/groupFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttons_a"
                android:elevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
