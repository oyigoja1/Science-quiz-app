                    android:id="@+id/question_six_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/bio_b_six" />

                <RadioButton
